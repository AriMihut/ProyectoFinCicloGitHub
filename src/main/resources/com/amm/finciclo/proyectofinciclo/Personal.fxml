<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane id="BorderPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amm.finciclo.proyectofinciclo.PersonalController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/personal.css"/>
    </stylesheets>
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
    <top>
        <StackPane style="-fx-background-color: #6DBD96" minHeight="80">
            <Text text="Sueños cumplidos - Personal" fill="white" 
                  style="-fx-font-weight: bold;">
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
            </Text>
        </StackPane> 
    </top>
    <right>
        <StackPane style="-fx-background-color: #eee;" minWidth="150">
            <GridPane styleClass="gridPaneDatos" hgap="20" vgap="20" style="-fx-background-color: grey">
                <Label styleClass="id" text="Id Empleado" GridPane.rowIndex="2" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="idPersonal" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label styleClass="dni" text="DNI" GridPane.rowIndex="3" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="dniPersonal" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label styleClass="nombre" text="Nombre" GridPane.rowIndex="4" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nombrePersonal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label styleClass="apellido" text="Apellido" GridPane.rowIndex="5" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="apellidoPersonal" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <Label text="Fecha Alta" styleClass="fechaAlta" GridPane.rowIndex="6" GridPane.columnIndex="0"/> 
                <DatePicker GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                <Label text="Fecha Baja" styleClass="fechaBaja" GridPane.rowIndex="7" GridPane.columnIndex="0"/> 
                <DatePicker GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                <Label text="Departamentos" styleClass="departamentos" GridPane.rowIndex="9" GridPane.columnIndex="0"/> 
                <ComboBox fx:id="departamentos" style="-fx-font-weight: bold" 
                          GridPane.rowIndex="9" GridPane.columnIndex="1"/> 
                <Label styleClass="idServicioOfrecido" text="Id Servicio Ofrecido" GridPane.rowIndex="10" GridPane.columnIndex="0" />
            <HBox prefHeight="100.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
                <children>
                <RadioButton fx:id="decoracion" mnemonicParsing="false" text="1" />
                <RadioButton fx:id="ceremonia" mnemonicParsing="false" text="2" />
                <RadioButton fx:id="estilismo" mnemonicParsing="false" text="3" />
                <RadioButton fx:id="musica" mnemonicParsing="false" text="4" />
                <RadioButton fx:id="reclamaciones" mnemonicParsing="false" text="5" />
                </children>
            </HBox>
                <ToolBar styleClass="buttons" HBox.hgrow= "ALWAYS" GridPane.rowIndex="0" 
                         GridPane.columnIndex="0" 
                         GridPane.columnSpan="2" >
                    <Button styleClass="boton-accion" onAction="#anadir" GridPane.rowIndex="1" 
                            GridPane.columnIndex="0">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/anadir.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#prepararModificar" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/modificar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#eliminar" GridPane.rowIndex="1" GridPane.columnIndex="2">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/eliminar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </ToolBar>
            </GridPane> 
        </StackPane>
    </right>
    <center>
        <StackPane styleClass="tabla_empleados" HBox.hgrow="ALWAYS">
            <TableView fx:id="tablaEmpleados">
                <columns>
                    <TableColumn text="id" prefWidth="${tablaEmpleados.width*0.10}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="dni" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="dni"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="nombre" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="nombre" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="apellido" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="apellido"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="fechaAlta" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="fechaAlta"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="fechaBaja" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="fechaBaja"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="idServicioOfrecido" prefWidth="${tablaEmpleados.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="idServicioOfrecido"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="idDepartamento" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="idDepartamento"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="esEncargado" prefWidth="${tablaEmpleados.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="esEncargado"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
    </center>
    <bottom>
        <StackPane style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#atras" focusTraversable="false" 
                    GridPane.rowIndex="4" GridPane.columnIndex="5" GridPane.columnSpan="9">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/atras.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </StackPane>   
    </bottom> 
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="pantallaDepartamentos" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS"
        fx:controller="com.amm.finciclo.proyectofinciclo.DepartamentoController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/departamento.css"/>
    </stylesheets>
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
        <GridPane styleClass="gridPaneDatos" hgap="20" vgap="20" >
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
                <Text styleClass="textoTitulo" text="Sueños cumplidos - Departamentos"
                GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" >
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
                </Text>
                <Label styleClass="idDepartamento" text="Id Departamento" GridPane.rowIndex="4" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="id" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="50"/>
                <Label styleClass="nombreDepartamento" text="Nombre Departamento" GridPane.rowIndex="5" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nombre" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="180"/>
                 <Label styleClass="idPersonal" text="Id Personal" GridPane.rowIndex="6" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="idPersonal" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="180"/>
                <ToolBar styleClass="buttons" HBox.hgrow= "ALWAYS" GridPane.rowIndex="7" 
                         GridPane.columnIndex="0" 
                         GridPane.columnSpan="2" style="-fx-background-color: #6DBD96">
                    <Button styleClass="boton-accion" onAction="#anadir" GridPane.rowIndex="7" 
                            GridPane.columnIndex="0">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/anadir.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#prepararModificar" 
                            GridPane.rowIndex="7" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/modificar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#eliminar" 
                            GridPane.rowIndex="7" GridPane.columnIndex="2">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/eliminar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </ToolBar>
            </GridPane> 
        <StackPane styleClass="tabla_departamentos" HBox.hgrow="ALWAYS">
            <TableView fx:id="tablaDepartamentos">
                <columns>
                    <TableColumn text="idDepartamento" prefWidth="${tablaDepartamentos.width*0.25}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="idDepartamento" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="nombreDepartamento" prefWidth="${tablaDepartamentos.width*0.75}">
                        <cellValueFactory>
                            <PropertyValueFactory property="nombreDepartamento" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
        <BorderPane>
        <bottom>
        <StackPane style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#atras" focusTraversable="false" 
                    GridPane.rowIndex="9" GridPane.columnIndex="5" GridPane.columnSpan="9">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/atras.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </StackPane>   
    </bottom> 
</BorderPane>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox id="VBox" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.amm.finciclo.proyectofinciclo.ProveedorController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/proveedor.css"/>
    </stylesheets>
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
        <GridPane styleClass="gridPaneDatos" hgap="20" vgap="20" >
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
                <Text styleClass="textoTitulo" text="Sueños cumplidos - Nuestros proveedores"
                GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
                </Text>
                <Label styleClass="idProveedor" text="Id Proveedor" GridPane.rowIndex="3" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="id" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="50"/>
                <Label styleClass="nombreProveedor" text="Nombre" GridPane.rowIndex="4" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nombre" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="180"/>
                <Label styleClass="apellidoProveedor" text="Apellido" GridPane.rowIndex="5" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="apellido" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="180"/>
                <Label styleClass="idPdctoOfrecido" text="Id Producto Ofrecido" GridPane.rowIndex="6" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="idProductoOfrecido" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="50"/>
                <ToolBar styleClass="buttons" HBox.hgrow= "ALWAYS" GridPane.rowIndex="8" 
                         GridPane.columnIndex="0" 
                         GridPane.columnSpan="2" style="-fx-background-color: #6DBD96">
                    <Button styleClass="boton-accion" onAction="#anadir" GridPane.rowIndex="8" 
                            GridPane.columnIndex="0">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/anadir.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#prepararModificar" 
                            GridPane.rowIndex="8" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/modificar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#eliminar" 
                            GridPane.rowIndex="8" GridPane.columnIndex="2">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/eliminar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </ToolBar>
            </GridPane> 
        <StackPane styleClass="tabla_proveedores" HBox.hgrow="ALWAYS">
            <TableView fx:id="tablaProveedores">
                <columns>
                    <TableColumn text="id" prefWidth="${tablaProveedores.width*0.25}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="nombre" prefWidth="${tablaProveedores.width*0.25}">
                        <cellValueFactory>
                            <PropertyValueFactory property="nombre" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="apellido" prefWidth="${tablaProveedores.width*0.25}">
                        <cellValueFactory>
                            <PropertyValueFactory property="apellido"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="idProductoOfrecido" prefWidth="${tablaProveedores.width*0.25}">
                        <cellValueFactory>
                            <PropertyValueFactory property="idProductoComprado"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
        <BorderPane>
        <bottom>
        <StackPane style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#atras" focusTraversable="false" 
                    GridPane.rowIndex="10" GridPane.columnIndex="5" GridPane.columnSpan="9">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/atras.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </StackPane>   
    </bottom> 
</BorderPane>
</VBox>

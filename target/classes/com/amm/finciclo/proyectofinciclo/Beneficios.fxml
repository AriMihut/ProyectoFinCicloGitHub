                    </TableColumn>
                    <TableColumn text="ingresos" prefWidth="${tablaBeneficios.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="ingresos"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="gastos" prefWidth="${tablaBeneficios.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="gastos"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="balanceFinal" prefWidth="${tablaBeneficios.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="balanceFinal"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
        <BorderPane>
        <bottom>
        <StackPane style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtr치s" onAction="#atras" focusTraversable="false" 

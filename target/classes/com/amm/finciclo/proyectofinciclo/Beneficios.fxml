<VBox fx:id="pantallaBeneficios" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS"
        fx:controller="com.amm.finciclo.proyectofinciclo.BeneficiosController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/beneficio.css"/>
    </stylesheets>
        <GridPane styleClass="gridPaneDatos" hgap="20" vgap="20" >
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding> 
                <Text styleClass="textoTitulo" text="Sue침os cumplidos - Beneficios"
                GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
                </Text>
                <Label styleClass="id" text="Id Beneficios" GridPane.rowIndex="3" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="id" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="50"/>
                 <Label styleClass="anho" text="A침o" GridPane.rowIndex="4" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="anho" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="50"/>
                <Label styleClass="ingresos" text="Ingresos" GridPane.rowIndex="5" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="ingresos" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="180"/>
                <Label styleClass="gastos" text="Gastos" GridPane.rowIndex="6" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="gastos" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="180"/>
                <Label styleClass="balanceFinal" text="Balance Final" GridPane.rowIndex="7" 
                       GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="balanceFinal" GridPane.rowIndex="7" GridPane.columnIndex="1" maxWidth="180"/>
                <ToolBar styleClass="buttons" HBox.hgrow= "ALWAYS" GridPane.rowIndex="9" 
                         GridPane.columnIndex="0" 
                         GridPane.columnSpan="2" style="-fx-background-color: #6DBD96">
                    <Button styleClass="boton-accion" onAction="#anadir" GridPane.rowIndex="9" 
                            GridPane.columnIndex="0">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/anadir.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#prepararModificar" 
                            GridPane.rowIndex="9" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/modificar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="boton-accion" onAction="#eliminar" 
                            GridPane.rowIndex="9" GridPane.columnIndex="2">
                        <graphic>
                            <ImageView>
                                <Image url="@../../../../iconos/eliminar.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </ToolBar>
            </GridPane> 
        <StackPane styleClass="tabla_beneficios" HBox.hgrow="ALWAYS">
            <TableView fx:id="tablaBeneficios">
                <columns>
                    <TableColumn text="id" prefWidth="${tablaBeneficios.width*0.20}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="a침o" prefWidth="${tablaBeneficios.width*0.20}">

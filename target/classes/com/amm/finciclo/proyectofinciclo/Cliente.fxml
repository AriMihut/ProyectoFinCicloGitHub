<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="paginaPrincipal" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.amm.finciclo.proyectofinciclo.ClienteController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/cliente.css"/>
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding> 
    <VBox HBox.hgrow="ALWAYS" prefWidth="${paginaPrincipal.width}" styleClass="contenedor-titulo">
        <Label text="Sueños cumplidos - Soy Cliente" styleClass="titulo" HBox.hgrow="ALWAYS"  
                prefWidth="${paginaPrincipal.width}"/>
    </VBox>
    <GridPane styleClass="gridPanePrincipal" alignment="CENTER" hgap="20" vgap="20" 
              style="-fx-justify-content: center">
                <Label styleClass="idCliente" text="Id" GridPane.rowIndex="1" 
                       GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
                <TextField fx:id="id" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label styleClass="dniCliente" text="Dni" GridPane.rowIndex="2" 
                       GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
                <TextField fx:id="dni" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <Label styleClass="nombreCliente" text="Nombre" GridPane.rowIndex="3" 
                       GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nombre" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <Label styleClass="labelSexo" text="Género" GridPane.rowIndex="4"  GridPane.columnIndex="1"/>
                <ComboBox styleClass="comboboxSexo" fx:id="comboboxSexo" GridPane.rowIndex="4" 
                  GridPane.columnIndex="2"/>
                <Label styleClass="telefono" text="Telefono" GridPane.rowIndex="1" 
                       GridPane.columnIndex="3" style="-fx-font-weight: bold;"/>
                <TextField fx:id="telefono" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                <Label styleClass="email" text="Email" GridPane.rowIndex="2" 
                       GridPane.columnIndex="3" style="-fx-font-weight: bold;"/>
                <TextField fx:id="email" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
                <Label styleClass="labelServicios" text="Servicio contratado" GridPane.rowIndex="3"  
                       GridPane.columnIndex="3"/>
                <ComboBox fx:id="servicios" GridPane.rowIndex="3" GridPane.columnIndex="4"/>
                <Label styleClass="importeTotal" text="Importe total" GridPane.rowIndex="4" 
                       GridPane.columnIndex="3" style="-fx-font-weight: bold;"/>
                <TextField fx:id="importeTotal" GridPane.rowIndex="4" GridPane.columnIndex="4"/>
            <ToolBar styleClass="buttons" HBox.hgrow= "ALWAYS" GridPane.rowIndex="5" 
                         GridPane.columnIndex="1" GridPane.columnSpan="5">   
                <Button styleClass="boton-accion" onAction="#comprar" text="COMPRAR" GridPane.rowIndex="5" 
                        GridPane.columnIndex="2" minHeight="35" minWidth="90" style="-fx-font-weight: bold;"/>
                <Button styleClass="boton-accion" onAction="#devolver" text="DEVOLVER" GridPane.rowIndex="5" 
                        GridPane.columnIndex="3" minHeight="35" minWidth="90" style="-fx-font-weight: bold;"/>
                <Button styleClass="boton-accion" onAction="#contactar" text="CONTACTAR" GridPane.rowIndex="5" 
                        GridPane.columnIndex="4" minHeight="35" minWidth="95" style="-fx-font-weight: bold;"/>
                <Button styleClass="boton-accion" onAction="#anadir" text="AÑADIR" GridPane.rowIndex="5" 
                        GridPane.columnIndex="3" minHeight="35" minWidth="90" style="-fx-font-weight: bold;"/>
                <Button styleClass="boton-accion" onAction="#editar" text="EDITAR" GridPane.rowIndex="5" 
                        GridPane.columnIndex="3" minHeight="35" minWidth="90" style="-fx-font-weight: bold;"/>
                <Button styleClass="boton-accion" onAction="#eliminar" text="ELIMINAR" GridPane.rowIndex="5" 
                        GridPane.columnIndex="3" minHeight="35" minWidth="90" style="-fx-font-weight: bold;"/>
            </ToolBar> 
    </GridPane> 
    <StackPane styleClass="tabla_clientes" HBox.hgrow="ALWAYS" style="-fx-padding: 20 0 0 0">
            <TableView fx:id="tablaClientes">
                <columns>
                    <TableColumn text="id" prefWidth="${tablaClientes.width*0.10}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="dni" prefWidth="${tablaClientes.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="dni"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="nombre" prefWidth="${tablaClientes.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="nombre" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="sexo" prefWidth="${tablaClientes.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="sexo"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="telefono" prefWidth="${tablaClientes.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="telefono"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="email" prefWidth="${tablaClientes.width*0.20}">
                        <cellValueFactory>
                            <PropertyValueFactory property="email"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="tipoServicio" prefWidth="${tablaClientes.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="tipoServicio"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="importeTotal" prefWidth="${tablaClientes.width*0.10}">
                        <cellValueFactory>
                            <PropertyValueFactory property="importeTotal"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
    <BorderPane>
        <bottom>
        <StackPane style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#volverAtras" focusTraversable="false" 
                    GridPane.rowIndex="9" GridPane.columnIndex="5" GridPane.columnSpan="9">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/puerta.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </StackPane>   
    </bottom> 
</BorderPane>
</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="BorderPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" 
 fx:id="pantallaContacto" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS"
        fx:controller="com.amm.finciclo.proyectofinciclo.MensajeController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/mensaje.css"/>
    </stylesheets> 
    <top>
        <HBox styleClass="titulo" style="-fx-background-color: #6DBD96" minHeight="60">
            <Text styleClass="textoTitulo" text="Sueños cumplidos - Contacto" fill="white" style="-fx-font-weight: bold;">
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
            </Text>
        </HBox> 
    </top>
    <left>
        <VBox fx:id="left" styleClass="leftVBox" spacing="20" style="-fx-background-color: #6DBD96" prefWidth="130">
        <Button fx:id="btnContacto" text="Contactar" onAction="#contactar"  focusTraversable="false"/>     
        
        <HBox>
            <ToolBar fx:id="toolBar" styleClass="buttons" HBox.hgrow= "ALWAYS" 
                 GridPane.rowIndex="5" GridPane.columnIndex="4" 
                 GridPane.columnSpan="9">
             <Button styleClass="boton-accion" onAction="#anadirModificar" GridPane.rowIndex="1" 
                     GridPane.columnIndex="0">
               <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/anadir.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="boton-accion" onAction="#prepararModificar" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/modificar.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="boton-accion" onAction="#eliminar" GridPane.rowIndex="1" GridPane.columnIndex="2">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/eliminar.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
        </HBox>
        </VBox>
    </left>  
    <center>
        <VBox fx:id="mensajes" styleClass="vBoxMensajes" spacing="20" style="-fx-background-color: grey">
        <StackPane styleClass="tabla_mensajes" HBox.hgrow="ALWAYS">
            <TableView fx:id="tablaMensajes" styleClass="tablaMensaje">
                <columns>
                    <TableColumn text="idMensaje" prefWidth="${tablaMensajes.width*0.20}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="idMensaje" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="nombreAutor" prefWidth="${tablaMensajes.width*0.20}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="nombreAutor"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="asunto" prefWidth="${tablaMensajes.width*0.20}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="asunto"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="tipoUsuario" prefWidth="${tablaMensajes.width*0.2}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="tipoUsuario"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="esUrgente" prefWidth="${tablaMensajes.width*0.20}" >
                        <cellValueFactory>
                            <PropertyValueFactory property="esUrgente"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </StackPane>
       </VBox>
    </center>   
    <bottom>
        <HBox style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#atras" focusTraversable="false" >
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/puerta.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </HBox>   
    </bottom>        
</BorderPane>


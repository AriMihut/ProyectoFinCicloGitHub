<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="BorderPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" 
 fx:id="pantallaContacto" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS"
        fx:controller="com.amm.finciclo.proyectofinciclo.MensajeController">
    <stylesheets>
        <URL value="@/com/amm/finciclo/proyectofinciclo/css/mensaje.css"/>
    </stylesheets> 
    <top>
        <HBox styleClass="titulo" style="-fx-background-color: #6DBD96" minHeight="60">
            <Text styleClass="textoTitulo" text="Sueños cumplidos - Mensajes" fill="white" style="-fx-font-weight: bold;">
                <font>
                    <Font name="Cambria" size="30"/>
                </font>
            </Text>
        </HBox> 
    </top>
    <left>
        <VBox fx:id="left" styleClass="leftVBox" spacing="20" style="-fx-background-color: #6DBD96" prefWidth="130">
        <Button fx:id="btnContacto" text="Contactar" onAction="#contactar"  focusTraversable="false"/>     
        </VBox>
    </left>  
    <center>
        <VBox fx:id="mensajes" styleClass="vBoxMensajes" spacing="20" style="-fx-background-color: grey">
            <TableView fx:id="tablaMensajes" styleClass="tablaMensaje">
                <columns>
                    <TableColumn fx:id="idMensajeColumn" text="Id" prefWidth="${tablaMensajes.width*0.10}" />
                    <TableColumn fx:id="nombreAutorColumn" text="Nombre autor" prefWidth="${tablaMensajes.width*0.20}" />
                    <TableColumn fx:id="asuntoColumn"  text="Asunto" prefWidth="${tablaMensajes.width*0.15}" />
                    <TableColumn  fx:id="textoMensajeColumn" text="Texto mensaje" prefWidth="${tablaMensajes.width*0.20}" />
                    <TableColumn  fx:id="tipoUsuarioColumn" text="Tipo usuario" prefWidth="${tablaMensajes.width*0.20}" />
                    <TableColumn  fx:id="esUrgenteColumn" text="Es urgente" prefWidth="${tablaMensajes.width*0.15}" />
                    <TableColumn  fx:id="idUsuarioColumn" text="Id usuario" prefWidth="${tablaMensajes.width*0.10}" />
                    <TableColumn  fx:id="verMensajeColumn" text="" prefWidth="${tablaMensajes.width*0.10}" />
                </columns>
            </TableView>
       </VBox>
    </center>   
    <bottom>
        <HBox style="-fx-background-color: #6DBD96" minHeight= "50" >
            <Button styleClass="botonAtrás" onAction="#atras" focusTraversable="false" >
                <graphic>
                    <ImageView>
                        <Image url="@../../../../iconos/puerta.png"/>
                    </ImageView>
                </graphic>
            </Button> 
        </HBox>   
    </bottom>        
</BorderPane>

